generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  theme    = "dark"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id       String     @id @default(cuid())
  name     String
  nick     String
  email    String
  User     User[]
  Product  Product[]
  Category Category[]
  Machine  Machine[]
  Sale     Sale[]

  @@map("stores")
}

model User {
  id       String  @id @default(cuid())
  nick     String  @unique
  name     String?
  password String
  Sale     Sale[]
  store    Store   @relation(fields: [store_id], references: [id])
  store_id String

  @@index([nick])
  @@map("users")
}

model Category {
  id          String    @id @default(cuid())
  description String
  Product     Product[]
  store       Store     @relation(fields: [store_id], references: [id])
  store_id    String

  @@map("categories")
}

model Product {
  id          String  @id @default(cuid())
  name        String
  code        Int?    @unique
  value       Int
  stock       Int
  description String?

  isDeleted Boolean @default(false)

  category    Category @relation(fields: [category_id], references: [id])
  category_id String

  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  SaleItem   SaleItem[]

  store    Store  @relation(fields: [store_id], references: [id])
  store_id String

  @@map("products")
}

model Machine {
  id     String @id @default(cuid())
  title  String
  credit Int
  debit  Int

  store    Store  @relation(fields: [store_id], references: [id])
  store_id String

  isDeleted Boolean @default(false)

  @@map("machines")
}

model Sale {
  id    String @id @default(cuid())
  title String

  sold_by    User   @relation(fields: [sold_by_id], references: [id])
  sold_by_id String

  sale_itens SaleItem[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  store   Store  @relation(fields: [store_id], references: [id])
  store_id String

  @@map("sales")
}

model SaleItem {
  id         String  @id @default(cuid())
  sale       Sale    @relation(fields: [sale_id], references: [id])
  sale_id    String
  price      Int
  product    Product @relation(fields: [product_id], references: [id])
  product_id String

  @@map("sale_itens")
}
