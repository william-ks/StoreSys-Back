generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  theme    = "dark"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int          @id @default(autoincrement())
  email        String       @unique
  name         String?
  password     String
  hierarchy_id Int
  hierarchy    Hierarchies? @relation(fields: [hierarchy_id], references: [id])
  Sale         Sale[]

  @@map("users")
}

model Hierarchies {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]

  @@map("hierarchies")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  code        Int?    @unique
  value       Int
  stock       Int
  description String?

  isDeleted Boolean @default(false)

  image    ProductImage? @relation(fields: [image_id], references: [id])
  image_id Int?

  category    Category @relation(fields: [category_id], references: [id])
  category_id Int

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("products")
}

model Category {
  id          Int       @id @default(autoincrement())
  description String
  Product     Product[]

  @@map("categories")
}

model ProductImage {
  id      Int       @id @default(autoincrement())
  url     String
  path    String
  Product Product[]

  @@map("productimages")
}

model Sale {
  id       Int     @id @default(autoincrement())
  title    String?
  products Json[]
  total    Int

  discount_for_client Int @default(0)

  sale_type    SaleType @relation(fields: [sale_type_id], references: [id])
  sale_type_id Int

  machine    Machine? @relation(fields: [machine_id], references: [id])
  machine_id Int?

  sold_by    User @relation(fields: [sold_by_id], references: [id])
  sold_by_id Int

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("sales")
}

model SaleType {
  id    Int    @id @default(autoincrement())
  title String
  Sale  Sale[]

  @@map("salestype")
}

model Machine {
  id     Int    @id @default(autoincrement())
  title  String
  credit Int
  debit  Int

  Sale Sale[]

  isDeleted Boolean @default(false)

  @@map("machines")
}
